<header id="page-header">
  <div class="container">
    <h1><%= t '.page_title' %></h1>
    <p class="subtitle">
      <%= t '.page_description' %>
    </p>
  </div>
</header>

<% if flash[:alert] %>
    <div class="container">
      <p class="alert alert-danger">
        <%= flash[:alert] %>
      </p>
    </div>
<% end %>
<% if flash[:notice] %>
    <div class="container">
      <p class="alert alert-success">
        <%= flash[:notice] %>
      </p>
    </div>
<% end %>

<section class="clearfix">
  <div class="container">
    <div class="white-content clearfix">
      <h2>
        <%= t '.gallery_explication' %>
      </h2>
      <%= render 'gallery' %>
    </div>
  </div>
</section>
