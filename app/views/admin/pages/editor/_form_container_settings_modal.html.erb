<div id="form-container-settings" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">
          <%= t '.block_settings' %>
        </h4>
      </div>
      <div class="modal-body main-form">
        <div class="row">
          <div class="col-md-12">
            <%= label_tag 'bg_color' %>
            <%= text_field_tag 'bg_color', "", rel: 'background-color' %>
            <div id="background-color-preview"></div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= label_tag 'bg_image' %>
            <%= text_field_tag 'bg_image', "", rel: 'background-image' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= label_tag 'padding_top' %>
            <%= text_field_tag 'padding_top', "", rel: 'padding-top' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= label_tag 'padding_right' %>
            <%= text_field_tag 'padding_right', "", rel: 'padding-right' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= label_tag 'padding_bot' %>
            <%= text_field_tag 'padding_bot', "", rel: 'padding-bottom' %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= label_tag 'padding_left' %>
            <%= text_field_tag 'padding_left', "", rel: 'padding-left' %>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button class="btn cancel">
          <%= t '.finished' %>
        </button>
      </div>
    </div>
  </div>
</div>
